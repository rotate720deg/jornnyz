/* components/course/course.wxss */
.course{
  padding: 30rpx;
  background-color:#fff;
  box-shadow:0px 0px 40rpx 0px rgba(0,0,0,0.1);
  border-radius: 15rpx;
  margin-bottom: 30rpx;
}
.flex{
  display: flex;
}
.img-wrap {
  width: 120rpx;
  margin-right: 20rpx;
  flex-direction: column;
  align-items: center;
}
.img-wrap .course-img{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}
.people-count, .condition{
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.info-wrap{
  flex: 1;
}
.info-wrap .name{
  margin-bottom: 10rpx;
}
.info-wrap .time, .info-wrap .coach{
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.info-wrap .time{
  margin-right: 20rpx;
}
.tags{
  margin-top: 10rpx;
}
.c-tag{
  margin-right: 20rpx;
}
.handle{
  width: 140rpx;
}