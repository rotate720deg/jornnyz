/**index.wxss**/

.container{
  padding: 20rpx 30rpx;
}
.slide-image{
  width: 100%;
  height: 240px; 
}

.appointment{
  /* padding: 20rpx 30rpx; */
}
.title-wrap{
  margin: 50rpx 0;
}
.title-wrap .title{
  font-size: 36rpx;
}
.title-wrap .history{
  color: #999;
  font-size: 24rpx;
}
.course{
  padding: 30rpx;
  background-color:#fff;
  box-shadow:0px 0px 40rpx 0px rgba(0,0,0,0.1);
  border-radius: 15rpx;
  margin: 30rpx 0;
}
.img-wrap {
  width: 120rpx;
  margin-right: 20rpx;
  flex-direction: column;
  align-items: center;
}
.img-wrap .course-img{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}
.people-count, .condition{
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.info-wrap{
  flex: 1;
}
.info-wrap .name{
  margin-bottom: 10rpx;
}
.info-wrap .time, .info-wrap .coach{
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.info-wrap .time{
  margin-right: 20rpx;
}
.tags{
  margin-top: 10rpx;
}
.handle{
  width: 140rpx;
}